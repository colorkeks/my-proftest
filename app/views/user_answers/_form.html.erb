<%= form_for @user_answer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :correct, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :correct, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :point, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :point, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :task_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :task_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :task_result_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :task_result_id, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            user_answers_path, :class => 'btn btn-default' %>
 
<% end %>
