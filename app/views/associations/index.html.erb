<h1>Listing associations</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Serial number</th>
      <th>Task</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @associations.each do |association| %>
      <tr>
        <td><%= association.text %></td>
        <td><%= association.serial_number %></td>
        <td><%= association.task_id %></td>
        <td><%= association.answer_id %></td>
        <td><%= link_to 'Show', association %></td>
        <td><%= link_to 'Edit', edit_association_path(association) %></td>
        <td><%= link_to 'Destroy', association, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

