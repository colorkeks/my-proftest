<%- model_class = Admin -%>
<div class="page-header">
  <h2>Фамилия и Имя</h2>
  <div>
    <%= link_to t('.back', :default => t("helpers.links.back_to_admins")),
                admins_path,
                :class => 'btn btn-default btn-xs' %>
  </div>
</div>
<dl class="dl-horizontal" style="float: left">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @admin.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @admin.last_name %></dd>
</dl>

<br>
<div class="page-header">
  <h2>Тесты</h2>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:description) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @tests.each do |test| %>
      <tr>
        <td><%= link_to test.id, test_path(test) %></td>
        <td><%= test.title %></td>
        <td><%= test.description %></td>
        <td><%=l test.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      test_path(test), :class => 'btn btn-default btn-md' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_test_path(test), :class => 'btn btn-default btn-md' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      test_path(test),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-md btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Создать тест")),
            create_test_admin_path,
            :class => 'btn btn-primary' %>
