<%- model_class = Admin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= link_to admin.id, admin_path(admin) %></td>
        <td><%= admin.first_name %></td>
        <td><%= admin.last_name %></td>
        <td><%=l admin.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_path(admin), :class => 'btn btn-default btn-md' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_path(admin), :class => 'btn btn-default btn-md' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_path(admin),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-md btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Создать админа")),
            new_admin_path,
            :class => 'btn btn-primary' %>
