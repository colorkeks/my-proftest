<%= simple_form_for @eqvgroup, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :test_id %>
  <%= f.input :section_id %>
  <%= f.input :number %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                eqvgroups_path, :class => 'btn btn-default' %>
<% end %>
