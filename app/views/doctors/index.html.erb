<%= content_for :title, 'Справочник медперсонала (DOCTORS)' %>
<div class="mainpanel" >
  <div class="pageheader">
    <div class="row">
      <div class="col-sm-3 col-lg-2">
        <h2>ФИО</h2>
      </div>
      <div class="col-sm-9 col-lg-10">
        <div class="breadcrumb-wrapper">
          <ol class="breadcrumb">
            <li class="active">
              <div class="btn-group nomargin">
                  <span class="dropdown-toggle" data-toggle="dropdown">Справочник медперсонала (DOCTORS)</span>
              </div>
            </li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <div class="contentpanel panel-email">
    <div class="row">
      <div class="col-sm-3 col-lg-2">
        <div class="btn-group nomargin">
          <%= link_to 'Создать', show_check_drcode_modal_users_path, class: 'btn btn-primary create-btn dropdown-toggle', title: 'Создать', remote: true %>
        </div>
        <ul class="nav nav-pills nav-stacked nav-email mb20">
          <li>
            <%= link_to 'Медперсонал' , doctors_path, class: 'active' %>
          </li>
          <li>
            <%= link_to 'Испытуемые' , test_persons_users_path, class: 'active' %>
          </li>
        </ul>
      </div>

      <div class="col-sm-9 col-lg-10">
        <div class="panel panel-default">
          <div class="panel-body panel-profile">
            <div class="btn-group labels mr10">
              <%= form_tag search_doctors_path, remote: true, id: 'search_form' do %>
                <div class="form-group" style="margin-top: 5px">
                  <span class="fa fa-search" ></span>
                  <%= text_field_tag :q, params[:q], id: 'qwery_string', autocomplete: 'off', class: 'form-control', placeholder: 'Найти' %>
                  <%= submit_tag 'Найти', class: 'btn btn-white' %>
                  <span id="spinner"><i class="fa fa-refresh fa-spin"></i></span>
                </div>
              <% end %>
            </div>
            <div class="table-responsive" id="search-result">
              <div class="text-center text-info alert alert-info" style="">
                <strong>Для поиска медперсонала введите код врача или ФИО</strong>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="check-drcode-modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Создание испытуемого</h4>
      </div>
      <div id="modal-place">

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
