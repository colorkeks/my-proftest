<%= form_for @task ,:url => new_task_path, :method => 'GET', :html => { :class => 'form-horizontal' } do |f| %>
<div class="modal-body">
    <div class="form-group">
      <%= f.label :task_type, :class => 'control-label'%>
      <div class="controls">
        <%= f.select :task_type,options_for_select(['Единичный выбор','Множественный выбор','Открытый вопрос']),{},{:class => 'form-control'}%>
      </div>
    </div>
      <div class="controls">
        <%= f.hidden_field :test_id,:value => @test_id, :class => 'form-control' %>
      </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
  <%= f.submit 'Далее', :class => 'btn btn-primary' %>
</div>
<% end %>