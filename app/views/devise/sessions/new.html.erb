<div class="row">
  <div class="col-lg-3 col-lg-offset-2">
    <h3>Вход</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email' %>
          <%= f.input :password, required: false, label: false, placeholder: 'Пароль' %>
          <%= f.input :remember_me, as: :boolean, label: 'Запомнить меня' if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Войти', class: 'form-control' %>
        </div>
    <% end %>
  </div>
  <div class="col-lg-3 col-lg-offset-1">
    <h3>Вход по токену</h3>
    <%= form_tag check_token_users_path, class: 'form' do %>
        <div class="form-inputs">
          <div class="form-group">
            <!--<label class="control-label">Токен</label>-->
            <%= text_field_tag :token, nil, class: 'form-control', placeholder: 'Номер', autocomplete: 'off' %>
          </div>
          <div class="form-group">
            <%#= submit_tag 'Войти', class: 'form-control' %>
          </div>
        </div>
        <div class="form-actions">
          <%= submit_tag 'Войти', class: 'form-control' %>
        </div>

    <% end %>
  </div>
</div>
