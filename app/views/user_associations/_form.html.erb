<%= simple_form_for(@user_association) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :text %>
    <%= f.input :serial_number %>
    <%= f.input :task_id %>
    <%= f.input :answer_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
