<%= simple_form_for @section, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :test_id %>
  <%= f.input :name %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sections_path, :class => 'btn btn-default' %>
<% end %>
