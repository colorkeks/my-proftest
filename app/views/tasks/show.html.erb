<%- model_class = Task -%>
<div class="page-header">
  <h2>Task</h2>
  <div>
    <%= link_to t('.back', :default => t("helpers.links.back_to_tasks")),
                test_path(@task.test_id),
                :class => 'btn btn-default btn-xs' %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @task.text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:task_type) %>:</strong></dt>
  <dd><%= @task.task_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:point) %>:</strong></dt>
  <dd><%= @task.point %></dd>
</dl>

<div class="page-header">
  <h1>Answers</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>id</th>
    <th>correct</th>
    <th>text</th>
    <th>point</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to answer.id, answer_path(answer) %></td>
        <td><%= answer.correct %></td>
        <td><%= answer.text %></td>
        <td><%= answer.point %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_answer_path(answer), :class => 'btn btn-default btn-md' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      answer_path(answer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-md btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Добавить вариант ответа")),
            create_answer_task_path,
            :class => 'btn btn-primary' %>