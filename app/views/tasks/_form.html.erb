<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :task_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :task_type,options_for_select(['Single choice','Multi choice','Ðžpen Question']),{},{:class => 'form-control'}%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :point, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :point, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :test_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.hidden_field :test_id, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            test_path(@task.test_id), :class => 'btn btn-default' %>

<% end %>
