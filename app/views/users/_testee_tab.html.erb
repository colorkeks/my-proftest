<div class="row">
  <div class="col-lg-12">
    <!-- Блок навигации по тесту с отметкой правильности выполненных тестовых заданий -->
    <div class="row">
      <div class="col-lg-12">
        <h3 class="text-center test-title">Личный кабинет</h3>
      </div>
    </div>

    <!-- Блок формулировски тестового задания -->
    <div class="row">
      <div class="question-content">
        <div class="sub-menu row">
          <div class="col-sm-4">
            <div class="item selected" href="#attestation" aria-controls="attestation" role="tab" data-toggle="tab">
              Аттестация
            </div>
          </div>
          <div class="col-sm-4">
            <div class="item" href="#practice" aria-controls="practice" role="tab" data-toggle="tab">
              Тренировка
            </div>
          </div>
          <div class="col-sm-4">
            <div class="item" href="#history" aria-controls="history" role="tab" data-toggle="tab">
              История
            </div>
          </div>
        </div>
        <div class="test-case">
          <div class="row">
            <div class="col-lg-12">
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="attestation">
                  <table class="table">
                    <thead>
                    <tr>
                      <th>Название:</th>
                      <th>Кол-во вопросов:</th>
                      <th>Время:</th>
                      <th>Действия:</th>
                    </tr>
                    </thead>
                    <tbody>

                    <% @assigned_tests.each do |assigned_test| %>
                        <tr>
                          <td><%= assigned_test.test.title %></td>
                          <td><%= assigned_test.test.tasks.count %></td>
                          <td><%= assigned_test.test.timer.strftime('%H:%M') %></td>
                          <% if assigned_test.test.tasks.count > 0 %>
                              <td><%= link_to 'Пройти тест', {:controller => :tries, :action => :create, :try => {:test_mode_id => @user.test_modes.order('created_at DESC').first, :date => Time.now, :timer => format('%02d:%02d', 0, 0), :user_id => @user.id, :test_id => test.id}}, :method => 'POST', :class => 'btn btn-default' %></td>
                          <% else %>
                              <td>
                                <h4>
                                  <div class="label label-warning">Пополните задания</div>
                                </h4>
                              </td>
                          <% end %>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="practice">
                  <table class="table">
                    <thead>
                    <tr>
                      <th>Название:</th>
                      <th>Кол-во вопросов:</th>
                      <th>Время:</th>
                      <th>Действия:</th>
                    </tr>
                    </thead>
                    <tbody>

                    <% @tests.where(:attestation => false).each do |test| %>
                        <tr>
                          <td><%= test.title %></td>
                          <td><%= test.tasks.count %></td>
                          <td><%= test.timer.strftime('%H:%M') if test.timer %></td>
                          <% if test.tasks.count > 0 %>
                              <td><%= link_to 'Пройти тест', {:controller => :tries, :action => :create, :try => {:test_mode_id => @user.test_modes.order('created_at DESC').first, :date => Time.now, :timer => format('%02d:%02d', 0, 0), :user_id => @user.id, :test_id => test.id}}, :method => 'POST', :class => 'btn btn-default' %></td>
                          <% else %>
                              <td>
                                <h4>
                                  <div class="label label-warning">Пополните задания</div>
                                </h4>
                              </td>
                          <% end %>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="history">
                  <table class="table">
                    <thead>
                    <tr>
                      <th>Название:</th>
                      <th>Дата:</th>
                      <th>Время:</th>
                      <th>Статус:</th>
                      <th>Правильность:</th>
                      <th>Оценка:</th>
                      <th>Действия:</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @tries.each do |try| %>
                        <tr>
                          <td><%= try.test.title if try.test %></td>
                          <td><%= try.date %></td>
                          <td><%= try.timer.strftime('%H:%M') if try.timer %></td>
                          <td>
                            <span class="label <%= try.status == 'Выполнен' ? 'label-success' : 'label-danger' %> "><%= try.status %></span>
                          </td>
                          <td style="text-align: center"><%= try.rate.nil? ? '' : try.rate.round().to_s + '%' %></td>
                          <td>
                            <% if !try.rate.nil? %>
                                <% if try.rate > 92 %>
                                    <%= 'Отлично' %>
                                <% elsif try.rate >= 70 %>
                                    <%= 'Хорошо' %>
                                <% elsif try.rate >= 50 %>
                                    <%= 'Удовл.' %>
                                <% else %>
                                    <%= 'Неуд.' %>
                                <% end %>
                            <% end %>
                          </td>
                          <td>
                            <% if try.status == 'Выполнен' %>
                                <%= link_to t('.пройти', :default => t("helpers.links.посмотреть результат")),
                                            try_result_try_path(try.id), :class => 'btn btn-default btn-md' %>
                            <% else %>
                                <%= link_to t('.пройти', :default => t("helpers.links.пройти тест")),
                                            show_question_try_path(try.id), :class => 'btn btn-default btn-md' %>
                            <% end %>
                          </td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
              <hr/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>