<%= content_for :title, 'Создание карточки испытуемого'%>

<div class="mainpanel">

  <div class="pageheader">
    <div class="row">
      <div class="col-sm-3 col-lg-2">
        <a class="btn btn-white back-btn pull-right" title="Назад" href="/doctors">
          <i class="fa fa-arrow-left"></i>
        </a>

        <h2>Персонал</h2>
      </div>
      <div class="col-sm-9 col-lg-10">
        <div class="breadcrumb-wrapper">
          <ol class="breadcrumb">
            <li class="active">
              <div class="btn-group nomargin">
                <span class="dropdown-toggle" data-toggle="dropdown">Создание карточки испытуемого</span>
              </div>
            </li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <div class="contentpanel ">
    <div class="row">

      <div class="col-sm-12 col-lg-12">
        <div class="panel panel-default">
          <div class="panel-body panel-profile">
            <%= form_for(@user, :url => url_for(:action => 'custom_create', :controller => 'users'), :html => {:class => 'form-horizontal'}) do |f| %>
                <div class="row">
                  <div class="user_form">
                    <div class="col-lg-5">
                      <div class="form-group">
                        <div class="col-lg-4">
                          <%= f.label 'Имя', :class => 'control-label' %>
                        </div>
                        <div class="controls col-md-8">
                          <%= f.text_field :first_name, :class => 'form-control', :value => params[:user] ? params[:user][:first_name].mb_chars.capitalize : '' %>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-lg-4">
                          <%= f.label 'Отчество', :class => 'control-label' %>
                        </div>
                        <div class="controls col-md-8">
                          <%= f.text_field :second_name, :class => 'form-control', :value => params[:user] ? params[:user][:second_name].mb_chars.capitalize : '' %>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-lg-4 left">
                          <%= f.label 'Фамиля', :class => 'control-label' %>
                        </div>
                        <div class="controls col-md-8">
                          <%= f.text_field :last_name, :class => 'form-control', :value => params[:user] ? params[:user][:last_name].mb_chars.capitalize : '' %>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-lg-4">
                          <%= f.label 'Работа(ЛПУ)', :class => 'control-label' %>
                        </div>
                        <div class="controls col-md-8">
                          <%= f.text_field :job, :class => 'form-control', :value => params[:user] ? params[:user][:job] : '' %>
                        </div>
                      </div>

                      <br/>

                      <div class="actions">
                        <%= f.submit 'Создать пользователя', :class => 'btn btn-primary' %>
                        <%= link_to t('.cancel', :default => t("helpers.links.Назад")),
                                    current_user, :class => 'btn btn-default' %>
                      </div>
                    </div>

                    <div class="col-lg-5">
                      <div class="form-group">
                        <div class="col-lg-4">
                          <%= f.label 'Дата рождения', :class => 'control-label' %>
                        </div>
                        <div class="controls col-md-8">
                          <%= f.text_field :birthday, :class => 'form-control', :id => 'birthday' %>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-lg-4">
                          <%= f.label 'E-mail', :class => 'control-label' %>
                        </div>
                        <div class="controls col-md-8">
                          <%= f.email_field :email, :class => 'form-control', value: (2...8).map { ('a'..'z').to_a[rand(26)] }.join + '@comsoft.corp.ru' %>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-lg-4">
                          <%= f.label 'Пароль', :class => 'control-label' %>
                        </div>
                        <div class="controls col-md-8">
                          <%= f.text_field :password, :class => 'form-control', value: rand.to_s[2..9] %>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-lg-4">
                          <%= f.label 'Роли', :class => 'control-label' %>
                        </div>
                        <div class="controls col-md-8">
                          <%= select_tag 'roles[]', options_from_collection_for_select(Role.all, 'name', 'name'), { :class => 'form-control chosen-select', multiple: '', :data => {placeholder: ' '}}%>
                        </div>
                      </div>
                    </div>


                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>