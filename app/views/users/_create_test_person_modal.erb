<%= form_tag create_test_person_users_path, class: 'form-horizontal' do %>
    <div class="modal-body">
      <div class="row">
        <div class="col-lg-6">
          <h4>Карточка испытуемого</h4>
          <%= hidden_field_tag :drcode, (@doctor ? @doctor.drcode : nil) %>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Фамилия</label>
            <div class="col-sm-8">
              <%= text_field_tag :last_name, (@doctor ? @doctor.surname : nil), class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Имя</label>
            <div class="col-sm-8">
              <%= text_field_tag :first_name, (@doctor ? @doctor.name : nil), class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Отчество</label>
            <div class="col-sm-8">
              <%= text_field_tag :second_name, (@doctor ? @doctor.secname : nil), class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Дата рождения</label>
            <div class="col-sm-8">
              <%= text_field_tag :birthday, nil, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">ЛПУ</label>
            <div class="col-sm-8">
              <%= text_field_tag :lpu, (@doctor ? @doctor.current_lpu.name : nil), class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <h4>Учетная запись</h4>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Email</label>
            <div class="col-sm-8">
              <%= text_field_tag :email, nil, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Пароль</label>
            <div class="col-sm-8">
              <%= password_field_tag :password, nil, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <%= submit_tag 'Сохранить', class: 'btn btn-primary' %>
    </div>
<% end %>
