<% if @user.roles.first.name == 'Тестируемый' %>
    <%= render partial: 'testee_tab'%>
<% elsif @user.roles.first.name == 'Методолог' %>
    <%= render partial: 'metodologist_tab'%>
<% elsif @user.roles.first.name == 'Администратор' %>
    <%= render partial: 'admin_tab'%>
<% elsif @user.roles.first.name == 'Системный администратор' %>
    <div class="col-lg-6">
      <div class="col-lg-12">
        <div style="text-align: center; width: 100%; height: 50px;">
          <span class="title"> Поиск пользователей </span>
        </div>
      </div>
      <%= form_tag(user_path, :method => 'get') do %>
          <p>

          <div class="col-lg-8" style="padding-left: 0px;">
            <%= text_field_tag :search, params[:search], :class => 'form-control' %>
          </div>
          <div class="col-lg-offset-2">
            <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
                Поиск <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </div>
          </p>
      <% end %>
      <table class="table">
        <thead>
        <tr>
          <th>Имя:</th>
          <th>Фамилия:</th>
          <th>Работа:</th>
          <th>Роль:</th>
          <th>Удалить:</th>
        </tr>
        </thead>
        <tbody>
        <% if @users %>
            <% @users.each do |user| %>
                <tr>
                  <td><%= user.first_name %></td>
                  <td><%= user.last_name %></td>
                  <td><%= user.job %></td>
                  <td><%= user.roles.first.name %></td>
                  <td><%= link_to t('.destroy', :default => t("helpers.links.Удалить")),
                                  user_path(user),
                                  :method => 'delete',
                                  :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                                  :class => 'btn btn-danger' %></td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>


<script>
    tab_selected();
    algorithm_selects();
</script>