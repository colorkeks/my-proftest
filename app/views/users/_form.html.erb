<%= form_for @user, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
      <div class="col-lg-2">
        <%= f.label 'Имя', :class => 'control-label' %>
      </div>
      <div class="controls col-md-8">
        <%= f.text_field :first_name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-2">
        <%= f.label 'Отчество', :class => 'control-label' %>
      </div>
      <div class="controls col-md-8">
        <%= f.text_field :second_name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-2">
        <%= f.label 'Фамилия', :class => 'control-label' %>
      </div>
      <div class="controls col-md-8">
        <%= f.text_field :last_name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-2">
        <%= f.label 'Работа', :class => 'control-label' %>
      </div>
      <div class="controls col-md-8">
        <%= f.text_field :job, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-2">
        <%= f.label 'Дата рождения', :class => 'control-label' %>
      </div>
      <div class="controls col-md-8">
        <%= f.date_select(:birthday, {start_year: 1930}, {:class => 'form-control', :style => 'width:100px; display:inline-block'}) %>
      </div>
    </div>


    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                profile_user_path(@user), :class => 'btn btn-default' %>

<% end %>
