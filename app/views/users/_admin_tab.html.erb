<div class="row">
  <div class="col-lg-12">
    <!-- Блок навигации по тесту с отметкой правильности выполненных тестовых заданий -->
    <div class="row">
      <div class="col-lg-12">
        <h3 class="text-center test-title">Личный кабинет</h3>
      </div>
    </div>
    <!-- Блок формулировски тестового задания -->
    <div class="row">
      <div class="question-content">
        <div class="sub-menu row">
          <div class="col-sm-4">
            <div class="item" href="#auth_users" aria-controls="attestation" role="tab" data-toggle="tab">
              Инициализация пользователей
            </div>
          </div>
          <div class="col-sm-4">
            <div class="item selected" href="#attestation_control" aria-controls="practice" role="tab" data-toggle="tab">
              Контроль аттестации
            </div>
          </div>
          <div class="col-sm-4">
            <div class="item" href="#history" aria-controls="history" role="tab" data-toggle="tab">
              История
            </div>
          </div>
        </div>
        <div class="test-case">
          <div class="row">
            <div class="col-lg-12">
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane" id="auth_users">
                  <div class="col-lg-12">
                    <div class="col-lg-6">
                      <%= form_for(@new_user, :url =>url_for(:action => 'custom_create', :controller => 'users'), :html => {:class => 'form-horizontal'}) do |f| %>
                          <div class="user_form">
                            <div class="form-group">
                              <div class="col-lg-3">
                                <%= f.label 'Имя', :class => 'control-label' %>
                              </div>
                              <div class="controls col-lg-offset-3">
                                <%= f.text_field :first_name, :class => 'form-control' %>
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="col-lg-3">
                                <%= f.label 'Фамиля', :class => 'control-label' %>
                              </div>
                              <div class="controls col-lg-offset-3">
                                <%= f.text_field :last_name, :class => 'form-control' %>
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="col-lg-3">
                                <%= f.label 'Работа', :class => 'control-label' %>
                              </div>
                              <div class="controls col-lg-offset-3">
                                <%= f.text_field :job, :class => 'form-control' %>
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="col-lg-3">
                                <%= f.label 'E-mail', :class => 'control-label' %>
                              </div>
                              <div class="controls col-lg-offset-3">
                                <%= f.email_field :email, :class => 'form-control' %>
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="col-lg-3">
                                <%= f.label 'Пароль', :class => 'control-label' %>
                              </div>
                              <div class="controls col-lg-offset-3">
                                <%= f.password_field :password, :class => 'form-control' %>
                              </div>
                            </div>
                            <div class="actions">
                              <%= f.submit 'Зарегистрировать пользователя', :class => 'btn btn-primary' %>
                            </div>
                          </div>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div role="tabpanel" class="tab-pane  active" id="attestation_control">
                  <div class="row">
                    <div class="col-lg-6">
                      <div style="text-align: center; width: 100%; height: 50px;">
                        <span class="title"> Поиск тестируемых </span>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div style="text-align: center; width: 100%; height: 50px;">
                        <span class="title"> Поиск Аттестационных тестов </span>
                      </div>
                    </div>
                    <%= form_tag(user_path, :method => 'get') do %>
                        <div class="col-lg-6">
                          <div class="col-lg-8">
                            <%= text_field_tag :search_users, params[:search_users], :class => 'form-control' %>
                          </div>
                          <div class="col-lg-offset-2">
                            <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
                                Поиск <span class="glyphicon glyphicon-search"></span>
                            <% end %>
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="col-lg-8" style="padding-left: 0px;">
                            <%= text_field_tag :search_tests, params[:search_tests], :class => 'form-control' %>
                          </div>
                          <div class="col-lg-offset-2">
                            <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
                                Поиск <span class="glyphicon glyphicon-search"></span>
                            <% end %>
                          </div>
                        </div>
                    <% end %>
                  </div>
                  <div style="margin-top: 30px;">
                    <%= form_tag({controller: 'tests', action: 'attestation_for_users'}, method: 'POST') do %>
                        <div class="col-lg-6">
                          <table class="table">
                            <thead>
                            <tr>
                              <th>Выбор:</th>
                              <th>Имя:</th>
                              <th>Фамилия:</th>
                              <th>Работа:</th>
                              <th>Роль:</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if @users %>
                                <% @users.each do |user| %>
                                    <% if user.roles.first.name == 'Тестируемый' %>
                                        <tr>
                                          <td><%= check_box_tag('check_users[]', user.id, false, :class => 'form-control') %></td>
                                          <td><%= user.first_name %></td>
                                          <td><%= user.last_name %></td>
                                          <td><%= user.job %></td>
                                          <td><%= user.roles.first.name %></td>
                                        </tr>
                                    <% end %>
                                <% end %>
                            <% end %>
                            </tbody>
                          </table>
                        </div>
                        <div class="col-lg-6">
                          <table class="table">
                            <thead>
                            <tr>
                              <th>Выбор:</th>
                              <th>Название:</th>
                              <th>Описание:</th>
                              <th>Алгоритм:</th>
                              <th>Задания:</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if @tests_search %>
                                <% @tests_search.where(:attestation => true).each do |test| %>
                                    <tr>
                                      <td><%= check_box_tag('check_tests[]', test.id, false, :class => 'form-control') %></td>
                                      <td><%= test.title %></td>
                                      <td><%= test.description %></td>
                                      <td><%= test.algorithm %></td>
                                      <td><%= test.tasks.count %></td>
                                    </tr>
                                <% end %>
                            <% end %>
                            </tbody>
                          </table>
                        </div>
                        </div>
                        <%= submit_tag('Добавить тесты тестируемым', :class => 'btn btn-primary')%>
                    <% end %>
                    </div>
                <div role="tabpanel" class="tab-pane" id="history">
                  <div style="text-align: center">
                    <span class="title">Тут ничего нету</span>
                  </div>
                </div>
              </div>
              <hr/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    time_picker();
</script>