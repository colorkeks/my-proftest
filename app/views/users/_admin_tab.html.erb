<div class="row">
  <div class="col-lg-12">
    <!-- Блок навигации по тесту с отметкой правильности выполненных тестовых заданий -->
    <div class="row">
      <div class="col-lg-12">
        <h3 class="text-center test-title">Личный кабинет</h3>
      </div>
    </div>
    <!-- Блок формулировски тестового задания -->
    <div class="row">
      <div class="question-content">
        <div class="sub-menu row">
          <div class="col-sm-4">
            <div class="item selected" href="#auth_users" aria-controls="attestation" role="tab" data-toggle="tab">
              Инициализация тестируемых
            </div>
          </div>
          <div class="col-sm-4">
            <div class="item" href="#attestation_control" aria-controls="practice" role="tab" data-toggle="tab">
              Контроль аттестации
            </div>
          </div>
          <div class="col-sm-4">
            <div class="item" href="#history" aria-controls="history" role="tab" data-toggle="tab">
              История
            </div>
          </div>
        </div>
        <div class="test-case">
          <div class="row">
            <div class="col-lg-12">
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="auth_users">
                  <div class="col-lg-6">
                    <div class="col-lg-12">
                      <div style="text-align: center; width: 100%; height: 50px;">
                        <span class="title"> Поиск тестируемых </span>
                      </div>
                    </div>
                    <div class="row">
                        <%= form_tag(user_path, :method => 'get') do %>
                              <div class="col-lg-8">
                                <%= text_field_tag :search_users, params[:search_users], :class => 'form-control' %>
                              </div>
                              <div class="col-lg-offset-2">
                                <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
                                    Поиск <span class="glyphicon glyphicon-search"></span>
                                <% end %>
                              </div>
                        <% end %>
                        <table class="table">
                          <thead>
                          <tr>
                            <th>Имя:</th>
                            <th>Фамилия:</th>
                            <th>Работа:</th>
                            <th>Роль:</th>
                            <th>Выбор:</th>
                          </tr>
                          </thead>
                          <tbody>
                          <% if @users %>
                              <% @users.each do |user| %>
                                  <% if user.roles.first.name == 'Тестируемый' %>
                                      <tr>
                                        <td><%= user.first_name %></td>
                                        <td><%= user.last_name %></td>
                                        <td><%= user.job %></td>
                                        <td><%= user.roles.first.name %></td>
                                        <td><%= link_to 'Профиль', profile_user_path(user.id), :class => 'btn btn-default' %></td>
                                      </tr>
                                  <% end %>
                              <% end %>
                          <% end %>
                          </tbody>
                        </table>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div style="text-align: center">
                        <%= link_to 'Новый тестируемый', new_user_path, :class => 'btn btn-primary'%>
                    </div>
                  </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="attestation_control">
                  <div style="text-align: center">
                    <span class="title">Тут ничего нету</span>
                  </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="history">
                  <div style="text-align: center">
                    <span class="title">Тут тоже ничего нету</span>
                  </div>
                </div>
              </div>
              <hr/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    time_picker();
</script>