<div class="row">
  <div class="col-lg-12">
    <!-- Блок навигации по тесту с отметкой правильности выполненных тестовых заданий -->
    <div class="row">
      <div class="col-lg-12">
        <h3 class="text-center test-title">Личный кабинет</h3>
      </div>
    </div>
    <!-- Блок формулировски тестового задания -->
    <div class="row">
      <div class="question-content">
        <div class="sub-menu row">
          <div class="col-sm-4">
            <div class="item selected" href="#auth_users" aria-controls="attestation" role="tab" data-toggle="tab">
              Инициализация тестируемых
            </div>
          </div>
          <div class="col-sm-4">
            <div class="item" href="#attestation_control" aria-controls="practice" role="tab" data-toggle="tab">
              Контроль аттестации
            </div>
          </div>
          <div class="col-sm-4">
            <div class="item" href="#history" aria-controls="history" role="tab" data-toggle="tab">
              История
            </div>
          </div>
        </div>
        <div class="test-case">
          <div class="row">
            <div class="col-lg-12">
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="auth_users">
                  <h3 class="title"> Поиск тестируемых </h3>
                  <%= form_tag(user_path, :method => 'get', class:'form-inline') do %>
                        <%= text_field_tag :search_users, params[:search_users], :class => 'form-control' %>
                        <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
                            Поиск <span class="glyphicon glyphicon-search"></span>
                        <% end %>
                        <%= link_to 'Создать учетную запись', new_user_path, :class => 'btn btn-primary pull-right' %>
                  <% end %>
                  <br/>
                  <table class="table table-bordered">
                    <thead>
                    <tr>
                      <th>Имя:</th>
                      <th>Фамилия:</th>
                      <th>Работа:</th>
                      <th>Роль:</th>
                      <th>Выбор:</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if @users %>
                        <% @users.each do |user| %>
                            <% if user.roles.where(name: 'Тестируемый').any? %>
                                <tr>
                                  <td><%= user.first_name %></td>
                                  <td><%= user.last_name %></td>
                                  <td><%= user.job %></td>
                                  <td>Тестируемый</td>
                                  <td><%= link_to 'Профиль', profile_user_path(user.id), :class => 'btn btn-default btn-xs' %></td>
                                </tr>
                            <% end %>
                        <% end %>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="attestation_control">
                  <div class="text-center">
                    <h3>Тут ничего нету</h3>
                  </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="history">
                  <div class="text-center">
                    <h3>Тут тоже ничего нету</h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>