<div class="row">
  <div class="col-lg-12">
    <!-- Блок навигации по тесту с отметкой правильности выполненных тестовых заданий -->
    <div class="row">
      <div class="col-lg-12">
        <h3 class="text-center test-title">Личный кабинет</h3>
      </div>
    </div>

    <!-- Блок формулировски тестового задания -->
    <div class="row">
      <div class="question-content">
        <div class="sub-menu row">
          <div class="col-sm-3">
            <div class="item selected" href="#create_test" aria-controls="create_test" role="tab" data-toggle="tab">
              Создание
            </div>
          </div>
          <div class="col-sm-3">
            <div class="item" href="#tests" aria-controls="my_tests" role="tab" data-toggle="tab">
              Тесты
            </div>
          </div>
          <div class="col-sm-3">
            <div class="item" href="#practice" aria-controls="practice" role="tab" data-toggle="tab">
              Тренировка
            </div>
          </div>
          <div class="col-sm-3">
            <div class="item" href="#history" aria-controls="history" role="tab" data-toggle="tab">
              История
            </div>
          </div>
        </div>
        <div class="test-case">
          <div class="row">
            <div class="col-lg-12">
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="create_test">
                  <div class="row">
                    <div style="margin-left: 50px; margin-right: 50px;">
                      <%= form_for @test, :html => {:class => 'form-horizontal'} do |f| %>
                          <div class="row">
                            <div class="col-lg-5">
                              <div class="form-group">
                                <div class="controls col-md-4">
                                  <%= f.label 'Заголовок', :class => 'control-label' %>
                                </div>
                                <div class="controls col-md-offset-4">
                                  <%= f.text_field :title, :class => 'form-control' %>
                                </div>
                              </div>
                              <div class="form-group">
                                <div class="controls col-md-4">
                                  <%= f.label 'Описание', :class => 'control-label' %>
                                </div>
                                <div class="controls col-md-offset-4">
                                  <%= f.text_field :description, :class => 'form-control' %>
                                </div>
                              </div>
                              <div class="form-group">
                                <div class="controls col-md-4">
                                  <label>Время:</label>
                                </div>
                                <div class="col-md-offset-4" >
                                  <%= f.text_field :timer, :class => 'form-control', :id => 'datetimepicker', :value => '1:00'%>
                                </div>
                              </div>
                              <%= f.hidden_field :user_id, :value => @user_id %>
                            </div>
                            <div class="col-lg-2">
                            </div>
                            <div class="col-lg-5">
                              <div class="form-group">
                                <div class="controls col-md-4">
                                  <label>Аттестационный:</label>
                                </div>
                                <div class="col-md-offset-4" >
                                  <%= f.check_box :attestation, :class => 'form-control'%>
                                </div>
                              </div>
                              <div class="form-group">
                                <div class="controls col-md-4">
                                  <label>Каталог:</label>
                                </div>
                                <div class="controls col-md-offset-4">
                                  <%= select_tag(:catalog, '<option>Каталога пока нет</option>'.html_safe, {:class => 'form-control'}) %>
                                </div>
                              </div>
                              <div class="form-group">
                                <div class="controls col-md-4">
                                  <label>Алгоритм:</label>
                                </div>
                                <div class="controls col-md-offset-4">
                                  <%= f.select(:algorithm, ['Все задания', 'Ограниченое количество заданий'],{},{:class => 'form-control algorithm'}) %>
                                </div>
                              </div>
                              <div class="form-group  adaptive_options hide">
                                <div class="controls col-md-4">
                                  <label>Параметры:</label>
                                </div>
                                <div class="col-md-offset-4" style="border: 1px solid black; text-align: center">
                                  <h4 style="margin: 6px;">Пока ничего конкретного нету</h4>
                                </div>
                              </div>
                              <div class="form-group  limited_options hide">
                                <div class="controls col-md-4">
                                  <label>Процент:</label>
                                </div>
                                <div class="col-md-offset-4">
                                  <%= f.number_field(:percent_tasks,:value => 50, :class => 'form-control', :style => 'width: 75px;') %>
                                </div>
                              </div>
                            </div>
                            <div class="col-lg-12"><%= f.submit 'Создать тест', :class => 'btn btn-primary' %></div>
                          </div>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="practice">
                  <table class="table">
                    <thead>
                    <tr>
                      <th>Название:</th>
                      <th>Кол-во вопросов:</th>
                      <th>Алгоритм</th>
                      <th>Время:</th>
                      <th>Действия:</th>
                    </tr>
                    </thead>
                    <tbody>

                    <% @tests.where(:attestation => false).each do |test| %>
                        <tr>
                          <td><%= test.title %></td>
                          <td><%= test.tasks.count %></td>
                          <td><%= test.algorithm %></td>
                          <td><%= test.timer.strftime('%H:%M') %></td>
                          <% if test.tasks.count > 0 %>
                              <td><%= link_to 'Пройти тест', {:controller => :tries, :action => :create, :try => {:timer => format('%02d:%02d', 00, 00), :date => Time.now, :user_id => @user.id, :test_id => test.id}}, :method => 'POST', :class => 'btn btn-default' %></td>
                          <% else %>
                              <td>
                                <h4>
                                  <div class="label label-warning">Пополните задания</div>
                                </h4>
                              </td>
                          <% end %>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="history">
                  <table class="table">
                    <thead>
                    <tr>
                      <th>Название:</th>
                      <th>Дата:</th>
                      <th>Время:</th>
                      <th>Статус:</th>
                      <th>Правильность:</th>
                      <th>Оценка:</th>
                      <th>Действия:</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @tries.each do |try| %>
                        <tr>
                          <td><%= try.test.title %></td>
                          <td><%= try.date %></td>
                          <td><%= try.timer.strftime('%H:%M') %></td>
                          <td>
                            <span class="label <%= try.status == 'Выполнен' ? 'label-success' : 'label-danger' %> "><%= try.status %></span>
                          </td>
                          <td style="text-align: center"><%= try.rate.nil? ? '' : try.rate.round().to_s + '%' %></td>
                          <td>
                            <% if !try.rate.nil? %>
                                <% if try.rate > 92 %>
                                    <%= 'Отлично' %>
                                <% elsif try.rate >= 70 %>
                                    <%= 'Хорошо' %>
                                <% elsif try.rate >= 50 %>
                                    <%= 'Удовл.' %>
                                <% else %>
                                    <%= 'Неуд.' %>
                                <% end %>
                            <% end %>
                          </td>
                          <td>
                            <% if try.status == 'Выполнен' %>
                                <%= link_to t('.пройти', :default => t("helpers.links.посмотреть результат")),
                                            try_result_try_path(try.id), :class => 'btn btn-default btn-md' %>
                            <% else %>
                                <%= link_to t('.пройти', :default => t("helpers.links.пройти тест")),
                                            show_question_try_path(try.id), :class => 'btn btn-default btn-md' %>
                            <% end %>
                          </td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="tests">
                  <table class="table">
                    <thead>
                    <tr>
                      <th>Название:</th>
                      <th>Описание:</th>
                      <th>Дата:</th>
                      <th>Кнопки:</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @tests.each do |test| %>
                        <tr>
                          <td><%= test.title %></td>
                          <td><%= test.description %></td>
                          <td><%= l test.created_at %></td>
                          <td>
                            <%= link_to t('.show', :default => t("helpers.links.показать")),
                                        test_path(test), :class => 'btn btn-default btn-md' %>
                            <%= link_to t('.edit', :default => t("helpers.links.редактировать")),
                                        edit_test_path(test), :class => 'btn btn-default btn-md' %>
                            <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                              test_path(test),
                                              :method => :delete,
                                              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                                              :class => 'btn btn-md btn-danger' %>
                          </td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
              <hr/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>