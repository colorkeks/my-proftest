<%= form_for(@new_user, :url =>url_for(:action => 'custom_create', :controller => 'users'), :html => {:class => 'form-horizontal'}) do |f| %>
    <div class="user_form">
      <div class="form-group">
        <div class="col-lg-3">
          <%= f.label 'Имя', :class => 'control-label' %>
        </div>
        <div class="controls col-lg-offset-3">
          <%= f.text_field :first_name, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-3">
          <%= f.label 'Фамиля', :class => 'control-label' %>
        </div>
        <div class="controls col-lg-offset-3">
          <%= f.text_field :last_name, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-3">
          <%= f.label 'Работа', :class => 'control-label' %>
        </div>
        <div class="controls col-lg-offset-3">
          <%= f.text_field :job, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-3">
          <%= f.label 'E-mail', :class => 'control-label' %>
        </div>
        <div class="controls col-lg-offset-3">
          <%= f.email_field :email, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-3">
          <%= f.label 'Пароль', :class => 'control-label' %>
        </div>
        <div class="controls col-lg-offset-3">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit 'Зарегистрировать пользователя', :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>