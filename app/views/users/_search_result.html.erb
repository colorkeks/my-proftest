<% if @tests.any? %>
    <span class="text-muted">Найдено <%= @tests.length %> из <%= @count %></span>
    <table class="table table-bordered">
      <thead>
      <tr>
        <td><strong>Название</strong></td>
        <td style="width: 30px;"><strong>Задания</strong></td>
        <td style="width: 30px;"><strong>Добавить</strong></td>
      </tr>
      </thead>
      <tbody>
      <% @tests.each do |test| %>
          <tr>
            <td><%= test.title %></td>
            <td><%= test.tasks.count %></td>
            <td>
                <%= link_to 'Добавить', {:controller => 'assigned_tests', :action => 'create',:assigned_test => {user_id: @user.id, test_id: test.id, test_mode_id: @user.test_modes.order('created_at DESC').first.id}}, :method => 'POST', :class => 'btn btn-white btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <div class="text-center text-info alert alert-info" >
      <strong>По Вашему запросу ничего не найдено.</strong>
    </div>
<% end %>