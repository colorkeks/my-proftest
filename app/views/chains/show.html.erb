<%- model_class = Chain -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:test_id) %>:</strong></dt>
  <dd><%= @chain.test_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:section_id) %>:</strong></dt>
  <dd><%= @chain.section_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:eqvgroup_id) %>:</strong></dt>
  <dd><%= @chain.eqvgroup_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              chains_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_chain_path(@chain), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              chain_path(@chain),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
