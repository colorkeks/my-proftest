<div class="modal-content">
<%= simple_form_for @test_group, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">
      <% case action_name %>
      <% when 'new' %>
        Добавить
      <% when 'edit' %>
        Переименовать
      <% end %>
      папку
    </h4>
  </div>
  <div class="modal-body" id="new-form">
    <%= f.input :name, label: 'Название' %>
    <%= f.hidden_field :parent_id %>

    <%= hidden_field_tag :current_test_group_id, params[:current_test_group_id] %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
    <%= f.button :submit, 'Сохранить', :class => 'btn btn-primary' %>
  </div>
<% end %>
</div>